<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QnA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Questions list</h1> 

    <div class="d-flex justify-content-center">
      <form action="/" method="GET" class="search-form">
        <input type="text" name="searchQuery" placeholder="Search by title or questioner" value="<%= searchQuery %>">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div>

    <div class="d-flex justify-content-between mb-4">
      <a href="/questions/new" class="btn btn-success">Ask question</a>
      <form id="logout-form" action="/logout" method="POST">
        <button type="submit" class="btn btn-warning">Logout</button>
      </form>
    </div>

     <% questions.forEach(question => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title"><%= question.title %></h2>
          <div class="card-subtitle text-muted mb-2">
            <%= question.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2">Asked by: <%= question.questioner %></div>
          <div class="card-text mb-2"><%= question.description %></div>
          <a href="questions/<%= question.slug %>" class="btn btn-primary">Details</a>
          <form action="/questions/<%= question.id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger" >Delete</button>
          </form>
        </div>
      </div>
    <% }) %>

  </div>

</body>
</html>